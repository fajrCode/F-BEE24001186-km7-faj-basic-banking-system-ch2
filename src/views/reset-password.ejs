<%- include('includes/header.ejs') %>

<div class="container flex flex-col items-center justify-center h-screen">
  <div class="bg-gray-500 w-4/5 sm:w-3/5 md:w-1/2 lg:w-1/3 p-4 rounded-lg">
    <h1 class="text-3xl text-center">Reset Password</h1>
    <form action="<%= link %>" method="post" id="info" class="mt-5 py-1 text-sm flex flex-col gap-2 text-black">
        <input type="hidden" name="email" value="<%= email %>">
        <div>
            <label for="password" class="mr-10">New Password</label>
            <input type="password" id="password" name="password" class="rounded-md px-1" required>
        </div>
        <div>
            <label for="confirmPassword" class="mr-5">Confirm Password</label>
            <input type="password" id="confirmPassword" name="confirmPassword" class="rounded-md px-1" required>
        </div>
        <button type="submit" class="rounded-lg px-2 py-1 bg-gray-200 mt-5">Reset Password</button>
    </form>
  </div>
</div>

<%- include('includes/header.ejs') %>
